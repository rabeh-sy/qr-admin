<% content_for :title, "Restaurants" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Restaurants</h1>
    <% if policy([:admin, :restaurant]).new? %>
      <%= link_to "New restaurant", new_admin_restaurant_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="restaurants" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @restaurants.any? %>
      <% @restaurants.each do |restaurant| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render restaurant %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            
            <%# show is not conditional, because scope handles it %>
            <%= link_to "Show", [:admin, restaurant], class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            
            <% if policy([:admin, restaurant]).edit? %>
              <%= link_to "Edit", edit_admin_restaurant_path(restaurant), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% end %>
            
            <% if policy([:admin, restaurant]).destroy? %>
              <%= button_to "Destroy", [:admin, restaurant], method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            <% end %>
        
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No restaurants found.</p>
    <% end %>
  </div>
</div>
